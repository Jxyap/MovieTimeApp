<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Ticket_confirmation">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Name:"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="35dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat Number(s) :"
        android:textColor="@color/white"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="35dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinema"
        android:textColor="@color/white"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="35dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/white"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="35dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="@color/white"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="35dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kong King"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/seat_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........"
        android:textColor="@color/white"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="200dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........"
        android:textColor="@color/white"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="200dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........"
        android:textColor="@color/white"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="200dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........"
        android:textColor="@color/white"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="200dp"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"
        android:text="BACK"/>


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="400dp"
        android:text="confirm" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btm_nav_bar"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/navigation"
        tools:layout_editor_absoluteY="273dp"></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>